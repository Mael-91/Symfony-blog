{% extends 'base.html.twig' %}
{% block title 'Gestion des categories' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/all.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/dashboard.css') }}">
{% endblock %}
{% block body %}
    <div class="container">
        <h4 class="text-center">Gestion des categories</h4>
        {% for message in app.flashes('success-create-category') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('success-edit-category') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('success-delete-category') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <a href="{{ path('admin.blog.categories.create') }}" class="btn btn-primary float-right mb-1">Publier</a>
        <table class="table table-stripped mt-3">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nom de la cat√©gorie</th>
                <th scope="col">Lien</th>
                <th scope="col">Outils</th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <th scope="row">{{ category.id }}</th>
                    <td>{{ category.name }}</td>
                    <td>{{ category.slug }}</td>
                    <td><a href="{{ path('admin.blog.categories.edit', {id: category.id}) }}" id="edit"><i class="far fa-edit"></i></a>
                        <form method="post" action="{{ path('admin.blog.categories.delete', {id: category.id}) }}" class="d-inline-block">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                            <button id="delete"><i class="far fa-trash-alt"></i></button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/all.min.js') }}"></script>
{% endblock %}