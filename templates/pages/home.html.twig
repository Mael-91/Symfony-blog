{% extends 'base.html.twig' %}
{% block title 'Accueil' %}
{% block body %}
    <div class="container ">
        {% for error in app.flashes('error-is-connected') %}
        <div class="alert alert-danger">
            {{ error }}
        </div>
        {% endfor %}
        {% for success in app.flashes('success-register') %}
            <div class="alert alert-success">
                {{ success }}
            </div>
        {% endfor %}
        {% for success in app.flashes('success-confirm-account') %}
            <div class="alert alert-success">
                {{ success }}
            </div>
        {% endfor %}
        <div class="jumbotron mt-4">
            <h1 class="display-4">Bienvenue sur le blog</h1>
            <p class="lead">Bienvenue sur le blog parlant des nouvelles technologies !</p>
            <hr class="my-4">
            <p>Inscrivez vous d√®s maintenant</p>
            <a class="btn btn-primary btn-lg" href="" role="button">S'inscrire</a>
        </div>
    </div>
{% endblock %}