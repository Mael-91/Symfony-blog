{% extends 'base.html.twig' %}
{% block title post.title %}
{% block body %}
    <div class="container">
        <div class="card mt-5">
            {% if post.bannerFilename %}
                <div class="card-body">
                    <img src="{{ vich_uploader_asset(post, 'bannerFile') }}" alt="{{ post.title }}" class="card-img-top">
                </div>
            {% endif %}
        </div>
        <div class="card mt-5 mb-3">
            {% for info in category %}
            <div class="card-body">
                <h5 class="card-title text-center">{{ post.title }}</h5>
                <div class="datetime mt-3">{{ post.createdAt | ago('text-black-50') }} {% if info.category_name %}- <a href="{{ path('blog.category', {slug: info.category_slug}) }}" class="text-decoration-none text-muted">{{ info.category_name }}</a>{% endif %}</div>
                <p class="card-text mt-3">{{ post.content | nl2br }}</p>
                <span class="blockquote-footer text-right">{{ post.author }}</span>
                <a href="{{ path('blog.like', {id: post.id, slug: post.slug}) }}" class="btn btn-like js-like">
                    {% if app.user and post.likedByUser(app.user) %}
                        <i class="like fas fa-thumbs-up float-left"></i>
                    {% else %}
                        <i class="like far fa-thumbs-up float-left"></i>
                    {% endif %}
                    <span class="float-left js-likes">{{ post.likes | length }}</span>
                    <span class="float-left js-label">Like</span>
                </a>
            </div>
            {% endfor %}
        </div>
    </div>
    <div class="container">
        <span class="text-dark mt-3" style="font-size: 20px">{{ nbrComment }} {% if nbrComment > 1 %} Commentaires {% else %} Commentaire {% endif %}
            <span class="float-right">
                <a class="twitter-share" target="_blank" href="https://twitter.com/intent/tweet?text={{ post.title }}&url={{ url('blog.show', {id: post.id, slug: post.slug}) }}&via=Mael_91"><i class="fab fa-twitter"></i></a>
            </span>
        </span>
        <div class="border-top my-3"></div>
        {% for message in app.flashes('success-send-comment') %}
        <div class="alert alert-success mt-3">
            {{ message }}
        </div>
        {% endfor %}
        {{ form_start(commentForm) }}
        <div class="send-comment mt-3">
            <div>
                <div class="">{{ form_row(commentForm.content) }}</div>
                <button class="btn btn-success" type="submit">Envoyer</button>
            </div>
        </div>
        {{ form_end(commentForm) }}
        {% for comment in comments %}
            <div class="comment" style="margin-top: 20px;" id="{{ comment.id }}">
                <input type="hidden" name="comment_id" value="{{ comment.id }}">
                <div class="card">
                    <div class="card-body">
                        <span class="card-title"><a href="" class="text-decoration-none text-muted" style="font-size: 1rem; font-weight: 700">{{ comment.author }}</a> - <abbr class="datetime" style="color: #9e9e9e; font-size: .7rem">{{ comment.createdAt | ago('text-black-50') }}</abbr> - <span class="reply text-muted" style="font-size: .7rem; text-decoration:  underline;">Répondre</span></span>
                        <p class="card-text mt-2">{{ comment.content | nl2br }}</p>
                    </div>
                </div>
            </div>
            <div class="reply-action">
                <form action="{{ path('blog.reply', {id: post.id, slug: post.slug, comment: comment.id}) }}" method="post" class="form-group" name="reply_form" id="reply">
                    <label for="reply_comment" class="required">Votre réponse</label>
                    <textarea class="form-control autoExpand reply-zone" id="reply_comment" name="reply_zone"></textarea>
                    <input type="hidden" name="parent_id" value="{{ comment.id }}">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('reply_comment' ~ comment.id) }}">
                    <button class="btn btn-success reply-btn" type="submit">Répondre</button>
                </form>
            </div>
            <div class="reply">
                <div class="card">
                    <div class="card-body">
                        <span class="card-title"><a href="" class="text-decoration-none text-muted" style="font-size: 1rem; font-weight: 700"></a> - <abbr class="datetime" style="color: #9e9e9e; font-size: .7rem"></abbr> - <span class="reply text-muted" style="font-size: .7rem; text-decoration:  underline;">Répondre</span></span>
                        <p class="card-text mt-2"></p>
                    </div>
                </div>
            </div>
        {% endfor %}
        <div class="pagination mt-2">
            {{ knp_pagination_render(comments) }}
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('textareaResize') }}
    {{ encore_entry_script_tags('blogLike') }}
    <script src="{{ asset('js/timeago.min.js') }}"></script>
    <script src="{{ asset('js/timeago.locales.min.js') }}"></script>
    <script>
        timeago().render(document.querySelectorAll('.timeago'), 'fr')
    </script>
{% endblock %}