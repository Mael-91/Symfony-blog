{% extends 'base.html.twig' %}
{% block title 'S\'inscire' %}
{% block body %}
    <div class="container mt-3">
        {{ form_start(registration) }}
            <div class="col-md-4 mx-auto">
                <div>{{ form_row(registration.username) }}</div>
                <div>{{ form_row(registration.first_name) }}</div>
                <div>{{ form_row(registration.last_name) }}</div>
                <div>{{ form_row(registration.email) }}</div>
                <div>{{ form_row(registration.password) }}</div>
                <div>{{ form_row(registration.birthday) }}</div>
                <div>{{ form_row(registration.sexe) }}</div>
                <button class="btn btn-primary" type="submit">S'inscire</button>
            </div>
        {{ form_end(registration) }}
    </div>
{% endblock %}